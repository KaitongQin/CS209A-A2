<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.canvas.Canvas?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.Controller" spacing="10" alignment="CENTER">

  <HBox spacing="10" alignment="BASELINE_LEFT">
    <Label text="Me: " />
    <Label fx:id="scoreLabel1" text="0" />
  </HBox>

  <HBox spacing="10" alignment="BASELINE_LEFT">
    <Label text="Opponent: " />
    <Label fx:id="scoreLabel2" text="0" />
  </HBox>

  <GridPane fx:id="gameBoard" VBox.vgrow="ALWAYS" hgap="5" vgap="5" >
  </GridPane>

  <HBox spacing="10" alignment="CENTER">
    <Button text="Reset" fx:id="resetButton" onAction="#handleReset"/>
  </HBox>
</VBox>

